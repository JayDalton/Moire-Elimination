<Page
    x:Class="ChartInUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChartInUWP"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <canvas:CanvasControl 
            x:Name="GraphCanvas" 
            Margin="5" Grid.Row="0"
            Draw="OnDrawGraph" />

        <ProgressRing x:Name="LoadProgress" Width="50" Height="50"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Breite"/>
                <Slider x:Name="MovingHorizontalSlider" ValueChanged="MovingHorizontalSlider_ValueChanged" SmallChange="1"/>
                <TextBlock Text="Zeilen"/>
                <Slider x:Name="MovingVerticalSlider" ValueChanged="MovingVerticalSlider_ValueChanged" SmallChange="1"/>
            </StackPanel>
            <Button Grid.Column="1" Click="Button_Click">
                <Image x:Name="GreyImage" Width="200" Height="200"/>
            </Button>
        </Grid>
    </Grid>
</Page>
